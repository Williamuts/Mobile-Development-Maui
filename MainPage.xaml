<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Lab_Task_2.MainPage"
             BackgroundColor="White"
             BackgroundImageSource="red5.jpg">
    <ScrollView>
        <Grid RowDefinitions="Auto, Auto, *">
            <Label Grid.Row="0"
                   Text="WILLIAM TIE TECK MING | BCS23020017"
                   TextColor="Black"
                   FontSize="18"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"
                   Margin="0, 20, 0, 10"
                   FontAttributes="Bold"/>

            <Image Grid.Row="1"
                   Source="maxwin.jpg" Aspect="AspectFill"
                   HeightRequest="300" />

            <VerticalStackLayout Grid.Row="2" Spacing="15" Padding="15">

                <Border BackgroundColor="#FFF9E0"
                        Padding="20"
                        Margin="0, -50, 0, 0" Shadow="{Shadow Brush=Black, Offset='5,5', Opacity=0.2, Radius=10}"
                        StrokeThickness="0">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="25" />
                    </Border.StrokeShape>

                    <VerticalStackLayout Spacing="8">
                        <Grid ColumnDefinitions="*, Auto">
                            <Label Grid.Column="0" Text="MAX VERSTAPPEN"
                                   FontSize="24"
                                   FontAttributes="Bold"
                                   TextColor="Black" />
                            <Label Grid.Column="1" Text="♂"
                                   FontSize="24"
                                   FontAttributes="Bold"
                                   TextColor="Black"
                                   VerticalOptions="Center"
                                   HorizontalOptions="End" />
                        </Grid>

                        <Grid ColumnDefinitions="*, Auto">
                            <Label Grid.Column="0" Text="F1 Racer"
                                   FontSize="16"
                                   TextColor="#333" />
                            <Label Grid.Column="1" Text="28 year old"
                                   FontSize="16"
                                   TextColor="#333"
                                   VerticalOptions="Center"
                                   HorizontalOptions="End" />
                        </Grid>

                        <Label Text="Four-time F1 world champion"
                               FontSize="14"
                               TextColor="#333" />
                    </VerticalStackLayout>
                </Border>

                <Grid ColumnDefinitions="Auto, *, Auto" Margin="0, 10, 0, 0">

                    <Border Grid.Column="0"
                            HeightRequest="50"
                            WidthRequest="50"
                            Padding="0"
                            Stroke="#EEE"
                            StrokeThickness="1">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="25" />
                        </Border.StrokeShape>

                        <Image Source="fia.jpg" Aspect="AspectFill" />
                    </Border>

                    <VerticalStackLayout Grid.Column="1" VerticalOptions="Center" Margin="10,0,0,0">
                        <Label Text="FIA" FontAttributes="Bold" />
                        <Label Text="Official" FontSize="12" TextColor="Gray" />
                    </VerticalStackLayout>

                    <Label Grid.Column="2"
                           Text="24.10.2025"
                           VerticalOptions="Center"
                           HorizontalOptions="End"
                           TextColor="Gray" />
                </Grid>

                <Label Text="The upcoming Mexican Grand Prix is ​​waiting for you to witness the glory of the Car Man"
                       FontSize="14"
                       Margin="0, 5, 0, 0"
                       TextColor="#333" />

                <Grid ColumnDefinitions="Auto, *" Margin="0, 15, 0, 10">

                    <Border Grid.Column="0"
                            Stroke="#E0E0E0"
                            StrokeThickness="1"
                            HeightRequest="55"
                            WidthRequest="55"
                            Padding="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="27.5" />
                        </Border.StrokeShape>
                        <Label Text="♡"
                               FontSize="26"
                               VerticalOptions="Center"
                               HorizontalOptions="Center"
                               TextColor="Gray" />
                    </Border>

                    <Button Grid.Column="1"
                            Text="AdmissionTicket"
                            BackgroundColor="#FFD147"
                            TextColor="Black"
                            CornerRadius="28"
                            HeightRequest="55"
                            Margin="10, 0, 0, 0"
                            FontAttributes="Bold"
                            FontSize="16"
                            Clicked="OnAdmissionTicketClicked" />
                </Grid>

            </VerticalStackLayout>
        </Grid>
    </ScrollView>
</ContentPage>